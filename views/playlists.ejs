<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify Playlist Filterer</title>
    <link rel="shortcut icon" href="images/spotify.webp">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link href="style.css" rel="stylesheet">
    <script>        
        function tester(playlist) {
            console.log("playlist: ", playlist)
        }


    </script>
</head>

<body>
    <input id="logout" class="btn btn-primary btn-lg" type="button" onclick="window.location='/logout'" value="Logout">
    <input id="allPlaylists" class="btn btn-primary btn-lg" type="button" onclick="window.location='/playlists'" value="Playlists">
    <input id="create" class="btn btn-primary btn-lg" type="button" onclick="window.location='/create'" value="Create Playlist">
    <br>
    <div style="text-align: center">
        <div class="btn-group-vertical">
            <% listOfPlaylists.forEach(function(playlist) { %>
                <button class="btn btn-primary btn-lg tester" onclick="window.location='/<%- playlist.uuid  %>';"><%- playlist.name %></button>
            <% }) %>
        </div>
    </div>

  


</body>

</html>